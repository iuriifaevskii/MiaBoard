@model MiaBoard.ViewModels._DataSourcesCreateViewModel
<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title text-center">Create Datasources</h4>
            </div>
            <div class="modal-body text-center">
                @using (Html.BeginForm("Save", "DataSources"))
                {
                    @Html.ValidationSummary(true, "Please fix the following errors.")
                    <div class="form-group">
                        @Html.LabelFor(m => m.NewDataSource.Type)
                        @Html.TextBoxFor(m => m.NewDataSource.Type, new { @class = "form-control text-center" })
                        @Html.ValidationMessageFor(m => m.NewDataSource.Type)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.NewDataSource.ServerName)
                        @Html.TextBoxFor(m => m.NewDataSource.ServerName, new { @class = "form-control text-center" })
                        @Html.ValidationMessageFor(m => m.NewDataSource.ServerName)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.NewDataSource.UserName)
                        @Html.TextBoxFor(m => m.NewDataSource.UserName, new { @class = "form-control text-center" })
                        @Html.ValidationMessageFor(m => m.NewDataSource.UserName)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.NewDataSource.Password)
                        @Html.TextBoxFor(m => m.NewDataSource.Password, new { @class = "form-control text-center" })
                        @Html.ValidationMessageFor(m => m.NewDataSource.Password)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.NewDataSource.DatabaseName)
                        @Html.TextBoxFor(m => m.NewDataSource.DatabaseName, new { @class = "form-control text-center" })
                        @Html.ValidationMessageFor(m => m.NewDataSource.DatabaseName)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.NewDataSource.ConnectionString)
                        @Html.TextBoxFor(m => m.NewDataSource.ConnectionString, new { @class = "form-control text-center" })
                        @Html.ValidationMessageFor(m => m.NewDataSource.ConnectionString)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.NewDataSource.OwnerId, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.NewDataSource.OwnerId, (MultiSelectList)ViewBag.CandidatsCompanyAdmin, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NewDataSource.OwnerId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @Html.AntiForgeryToken()
                    <div class="modal-body text-center">
                        <button type="submit" class="btn btn-primary js-update">Save</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>