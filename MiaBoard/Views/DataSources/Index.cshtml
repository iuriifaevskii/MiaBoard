@model MiaBoard.Models.DataSource

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid left-menu-padding">
    <!-- Navigation Left-->
    <div class="col-lg-3 col-md-4 col-sm-12 col-xs-12 bhoechie-tab-container new-bhoechine-tab menu-border-mobile">
        <div class="col-lg-4 col-md-3 col-sm-4 col-xs-4 bhoechie-tab-menu">
            <div class="list-group">
                <a href="#" class="list-group-item active text-center">
                    <div class="icon-main"><i class="fa fa-globe" aria-hidden="true"></i></div>
                    <br />Company List
                </a>
                <a href="/Dashboards/View/1" class="list-group-item text-center">
                    <div class="icon-main"><i class="fa fa-tachometer" aria-hidden="true"></i></div>
                    <br />Dashboard List
                </a>
            </div>
        </div>
        <div class="col-lg-8 col-md-9 col-sm-8 col-xs-8 bhoechie-tab menu-padding-item white-super">
            <!-- flight section -->
            <div class="bhoechie-tab-content active">
                <ul class="nav nav-pills nav-stacked">
                    <li><a href="/Roles"><i class="fa fa-users fa-fw"></i>User Groups</a></li>
                    <li><a href="/Users"><i class="fa fa-user fa-fw"></i>User List</a></li>
                    <li><a href="/Dashboards"><i class="fa fa-clipboard fa-fw"></i>Dashboard List</a></li>
                    <li><a href="/DataSources/Index"><i class="fa fa-database fa-fw"></i>Datasource List</a></li>
                </ul>
            </div>
            <!-- train section -->
            <div class="bhoechie-tab-content">
            </div>
        </div>
    </div>
    <!-- End Navigation Left-->
    <div class="col-lg-9 col-md-8 col-sm-12 col-xs-12  new-bhoechine-tab-main">
        <div class="text-center">
            <button style="font-size:30px" type="button" class="btn btn-info btn-lg btn-create-datasource" data-toggle="modal" data-target="#myModal">Create Datasource</button>
        </div>
        <div class="container">

            <div class="container">
                @Html.Partial("~/Views/DataSources/_DataSourceForm.cshtml", Model)
            </div>
            <table id="dataSources" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Data Source Type</th>
                        <th>Server Name</th>
                        <th>Database Name</th>
                        <th>User Name</th>
                        <th>Password</th>
                        <th>ConnectionString</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>

        </div>
    </div>
</div>
    @section scripts
{
        <script>
            $(document).ready(function () {
                var table = $("#dataSources").DataTable({
                    responsive: true,
                    scrollY: 300,
                    ajax: {
                        url: "/api/dataSources",
                        dataSrc: ""
                    },
                    columns: [
                        {
                            data: "type",
                            render: function (data, type, dataSource) {
                                return "<a href='/DataSources/Edit/" + dataSource.id + "'>" + dataSource.type + "</a>";
                            }
                        },
                        {
                            data: "serverName"
                        },
                        {
                            data: "databaseName"
                        },
                        {
                            data: "userName"
                        },
                        {
                            data: "password"
                        },
                        {
                            data: "connectionString"
                        },
                        {
                            data: "id",
                            render: function (data) {
                                return "<button class = 'btn-link js-delete' data-dataSource-id=" + data + ">Delete</button>";
                            }
                        }
                    ]
                });
            });
            $("#dataSources").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this dataSource?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/dataSources/" + button.attr("data-dataSource-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        </script>
    }
    <script>
        /******************/
        /* Navigation Left*/
        /******************/

        $(document).ready(function () {
            $("div.bhoechie-tab-menu>div.list-group>a").click(function (e) {
                $(this).siblings('a.active').removeClass("active");
                $(this).addClass("active");
                var index = $(this).index();
                $("div.bhoechie-tab>div.bhoechie-tab-content").removeClass("active");
                $("div.bhoechie-tab>div.bhoechie-tab-content").eq(index).addClass("active");
            });
        });

        /**********************/
        /* End Navigation Left*/
        /**********************/
    </script>

